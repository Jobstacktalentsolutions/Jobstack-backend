# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jobstack_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
# For development (HS256)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# For production (RS256) - Generate using: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
# JWT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nYour private key here\n-----END RSA PRIVATE KEY-----
# JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nYour public key here\n-----END PUBLIC KEY-----

JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
JWT_ISSUER=jobstack-platform
JWT_AUDIENCE=jobstack-users

# Email Configuration (Brevo)
BREVO_API_KEY=your_brevo_api_key_here
BREVO_FROM_EMAIL=noreply@jobstack.ng
BREVO_FROM_NAME=JobStack

# Company Information
COMPANY_NAME=JobStack
SUPPORT_EMAIL=support@jobstack.ng
WEBSITE_URL=https://jobstack.ng

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@jobstack.ng
RESEND_FROM_NAME=JobStack
