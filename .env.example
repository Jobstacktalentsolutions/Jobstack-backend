# Server Configuration
PORT=3100
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/jobstack

# Frontend
FRONTEND_URL=http://localhost:3000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=jobstack:

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_PRIVATE_KEY=your-private-key-here
JWT_PUBLIC_KEY=your-public-key-here
JWT_ACCESS_TOKEN_EXPIRES_IN=48h
JWT_ISSUER=jobstack-platform
JWT_AUDIENCE=jobstack-users

# Email Configuration (Brevo)
BREVO_API_KEY=your-brevo-api-key
BREVO_FROM_EMAIL=noreply@jobstack.com
BREVO_FROM_NAME=JobStack

# Company Information
COMPANY_NAME=JobStack
SUPPORT_EMAIL=support@jobstack.com
WEBSITE_URL=https://jobstack.com

# Storage Configuration (IDrive E2 / S3-compatible)
IDRIVE_ENDPOINT=https://your-endpoint.idrivee2.com
IDRIVE_REGION=us-east-1
IDRIVE_ACCESS_KEY_ID=your-access-key-id
IDRIVE_SECRET_ACCESS_KEY=your-secret-access-key
IDRIVE_PUBLIC_BUCKET=jobstack-public
IDRIVE_PRIVATE_BUCKET=jobstack-private

# Super Admin
SUPER_ADMIN_EMAIL=admin@jobstack.com
SUPER_ADMIN_PASSWORD=secure-password
SUPER_ADMIN_FIRST_NAME=Admin
SUPER_ADMIN_LAST_NAME=User
